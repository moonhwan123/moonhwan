/*
 
 *
 **
 ***
 ****
 *****
 
 
 */

// 이스케이프문자 "\n" -> NewLine , "\r" -> return , "\t" -> tab


public class Exam_05 {
	
	public static void main(String[] args) {
		
		System.out.print("*\n");
		System.out.print("**\n");
		System.out.print("***\n");
		System.out.print("****\n");
		System.out.print("*****\n");
		System.out.println("\\");
		
		System.out.print("abc***\n");
		System.out.print("def***");
		
		
		
		
	}

}
